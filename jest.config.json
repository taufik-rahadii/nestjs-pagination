{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.service.(t|j)s"],
  "coverageDirectory": "./coverage",
  "coverageReporters": ["json-summary", "text", "lcov"],
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests/"],
  "moduleNameMapper": {
    "^@app/pagination(|/.*)$": "<rootDir>/lib"
  }
}
